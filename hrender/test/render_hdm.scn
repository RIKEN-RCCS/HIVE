print('Render HDM')

local camera = Camera()
camera:SetScreenSize(1024, 1024)
camera:SetFilename('image_hdm.jpg')

camera:LookAt(
	600,600,600,
	0,0,0,
	0,1,0,
	60
)


local hdm = HDMLoader()
-- cellid file, data file, field name, field type, components(1=scalar, 3=vector)
hdm:Load('hdm_out/cellid.bcm', 'hdm_out/data.bcm', "Tmp32", "Float32", 1)

local volume = SparseVolumeModel()
local volumedata = hdm:SparseVolumeData()
volume:Create(volumedata)
volume:SetShader('def_volume_raymarch4.frag')
render {camera, volume}
