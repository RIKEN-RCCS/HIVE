print('render_pointlist')
local ptable = {}
local maxnum = 2560
for j = 1, maxnum do 
	table.insert(ptable, (( math.random() * 2.0) - 1.0) * 200);
end

local gen  = PrimitiveGenerator()
local pl   = gen:PointList(ptable, maxnum, 1.0)
local model = PointModel()
model:Create(pl)
model:SetShader('normal.frag')
local cam = Camera()
cam:SetScreenSize(512, 512)
cam:SetFilename("render_pointlist.jpg")
cam:LookAt(
	0,0,300,
	0,0,0,
	0,1,0,
	60
)

render({cam, model})
