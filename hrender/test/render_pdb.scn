
print('Render PDB')
local camera = Camera()
camera:SetScreenSize(1024, 1024)
camera:SetFilename('render_pdb.jpg')

camera:LookAt(
	0,0,200,
	0,0,0,
	0,1,0,
	60
)


local pdb = PDBLoader()
pdb:Load('4CL8.pdb')

local model = PointModel()
local pointdata = pdb:BallData()
model:Create(pointdata)
model:SetShader('white.frag')

render {camera, model}
